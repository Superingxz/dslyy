<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BasePaddingStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_round5_white"
    android:gravity="center"
    android:minWidth="@dimen/dp_300"
    android:orientation="vertical">

    <TextView
        android:id="@+id/warn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round5_green"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/string_base_ok"
        android:textColor="#ffffffff"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>